

<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Task Manager</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">


</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top navbar-style--custom">
	<div class="container">
		<a href="@Url.Action("Index","Home")"><img class="logo navbar-left" src="https://www2.unip.br/portal/Assets/img/logo-unip-home.png" alt="logo" /></a>
		<div class="navbar-header margin-left-25">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li>@Html.ActionLink("Home", "Index", "Home")</li>
				<li>@Html.ActionLink("Tarefas", "Index", "Tarefas")</li>
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>

<div class="container body-content">
	@RenderBody()
	<footer>
		<br/>
		<p>&copy; @DateTime.Now.Year - Task Manager</p>
	</footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

